{
  "name": "homelab-indexer",
  "version": "0.1.0",
  "description": "Automatic network inventory and service catalog for homelab",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/ui",
    "apps/scanner",
    "packages/shared"
  ],
  "scripts": {
    "dev": "npm run -w apps/api dev & npm run -w apps/ui dev & npm run -w apps/scanner dev",
    "build": "npm run -w packages/shared build && npm run -w apps/api build && npm run -w apps/ui build && npm run -w apps/scanner build",
    "start": "npm run -w apps/api start",
    "db:migrate": "npm run -w apps/api db:migrate",
    "db:seed": "npm run -w apps/api db:seed",
    "lint": "npm run lint -ws",
    "format": "npm run format -ws",
    "test": "npm run test -ws",
    "test:acceptance": "npm run test:acceptance -w apps/api"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  },
  "dependencies": {
    "ping": "^1.0.0"
  }
}
